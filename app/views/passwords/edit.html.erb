<h1> Edit Password</h1>

<%= form_with model:Current.person , url:edit_password_path ,data: { turbo: false } do |form| %>
<% if Current.person.errors.any? %>
  <div class="alert alert-danger">
  <% @person.errors.full_messages.each do|message|%>
  <div><%=message%></div>
  <%end%>
  </div>
   <%end%>
 <div class="mb-3">
  <%=form.label :Password %>
 <%=form.password_field :password , class:"form-control", placeholder:"password"%>
 </div>
 <div class="mb-3">
  <%=form.label :Confirm_Password %>
 <%=form.password_field :password_confirmation, class:"form-control", placeholder:"confirm password" %>
 </div>

 <div class="mb-3">
  <%=form.submit :"Update Password", class:"btn btn-primary" %>
 
 </div>

<%end%>