<h1>Cards</h1>
 <div class="my-2">
<%= link_to 'Add New Card', cardz_new_path%>
</div>
<div class="card-list my-4">
   

  <% Current.person.cardz.all.each do |cardz|%>
  <div class="col-md-4 my-7">
    <div class="card" style="width: 15rem;" >
  <img class="card-img-top" src="..." alt="">
  <div class="card-body">
    <h5 class="card-title"><%=cardz.title%></h5>
    <p class="card-text"><%=cardz.content%></p>
    <%= link_to ' Edit Card ', edit_cardz_path(cardz), class:"btn btn-primary" %>
    <div class="my-2">
      
 <%= link_to 'Delete It', delete_cardz_path(cardz), method: :delete, class:"btn btn-danger" %>

      </div>
  </div>
</div>
</div>
      
 

    </div>
  <% end %>
</div>
